
<%- @gossip_array.each do |gossip| -%>
<div class="card bg-light mb-3" style="max-width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Titre :<%= link_to gossip.title, gossip_path(gossip.id) %></h5>
    <p class="card-text">Auteur: <%= link_to gossip.user.first_name + " " + gossip.user.last_name.upcase, user_path(gossip.user.id) %>
    </p>
    <small><%= gossip.comments.where(gossip: gossip).length%> commentaires</small><br>
    <a href="<%= gossip_path(gossip.id)%>" class="btn btn-primary">Lire le gossip</a>
  </div>
</div>

<%- end -%>
